{
  "name": "cloudflare-serverless-boilerplate",
  "private": false,
  "scripts": {
    "dev:local": "wrangler dev src/main.ts --local",
    "dev:development": "wrangler dev src/main.ts --remote",
    "dev:production": "wrangler dev src/main.ts --remote --env production",
    "deploy:development": "wrangler deploy --minify src/main.ts",
    "deploy:production": "wrangler deploy --minify src/main.ts --env production",
    "migrations:local": "wrangler d1 migrations apply dnu-insurance-database --local",
    "migrations:development": "wrangler d1 migrations apply dnu-insurance-database --preview --remote",
    "migrations:production": "wrangler d1 migrations apply dnu-insurance-database --preview --remote --env production",
    "database:generate": "sh src/scripts/database-generate.script.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky || true",
    "postinstall": "node .husky/install.mjs"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.3",
    "big.js": "^6.2.2",
    "dayjs": "^1.11.13",
    "decimal.js": "^10.4.3",
    "drizzle-orm": "0.38.3",
    "drizzle-zod": "0.6.1",
    "hono": "^4.6.16",
    "might-fail": "^0.7.3",
    "nanoid": "^5.0.9",
    "nanoid-dictionary": "^4.3.0",
    "uuid": "11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@hono/swagger-ui": "^0.5.0",
    "@ianvs/prettier-plugin-sort-imports": "4.4.1",
    "@types/big.js": "^6.2.2",
    "@types/eslint__js": "8.42.3",
    "@types/nanoid-dictionary": "^4.2.3",
    "@types/node": "22.10.7",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/parser": "8.20.0",
    "drizzle-kit": "0.30.1",
    "eslint": "9.18.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.2",
    "husky": "9.1.7",
    "lint-staged": "15.3.0",
    "prettier": "3.4.2",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "typescript-eslint": "8.20.0",
    "wrangler": "^3.102.0"
  }
}
